# BizzyLink Environment Configuration
# ----------------------------------
# SECURITY IMPORTANT: Never commit the actual .env file to version control
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
NODE_ENV=development # Set to 'production' in production environment

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bizzylink

# Security Keys (GENERATE STRONG RANDOM VALUES)
# To generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_with_random_32_byte_hex_string
EMERGENCY_ACCESS_CODE=replace_with_different_random_string

# JWT Configuration
JWT_EXPIRY=24h # Token expiry time
JWT_REFRESH_EXPIRY=7d # Refresh token expiry

# Session and Link Codes
SESSION_EXPIRY=3600 # Session expiry time in seconds (1 hour)
LINK_CODE_EXPIRY=30 # Link code expiry time in minutes

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
WEBSITE_URL=http://localhost:3000 # Change to your domain in production

# Rate Limiting (requests per time window)
RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10 # Login/register attempts

# Email Configuration (for password reset etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_username
SMTP_PASS=your_password
EMAIL_FROM=noreply@example.com

# Minecraft Plugin Connection
MC_API_KEY=replace_with_secure_api_key
MC_SERVER_API=http://your-minecraft-server-ip:4567

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
LOG_FILE_PATH=./logs/server.log
ERROR_LOG_PATH=./logs/error.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_FRIEND_REQUESTS=true
ENABLE_USER_PROFILES=true

# Admin Configuration
ADMIN_CONTACT_EMAIL=admin@example.com